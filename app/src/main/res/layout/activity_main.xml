<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activitymain"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingStart="20dp"
    android:paddingEnd="20dp"
    tools:context="com.example.candidacyform.MainActivity">

    <LinearLayout
        android:layout_width="410dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="294dp"
        android:orientation="vertical">


        <TextView
            android:id="@+id/textView"
            android:layout_width="408dp"
            android:layout_height="wrap_content"
            android:text="Email Address"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#1A2163"
            android:layout_marginTop="30dp"/>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:id="@+id/XXemailaddress"
            app:hintTextColor="@color/black"
            android:hint="enter email adress"
            app:helperTextEnabled="true"
            app:helperText="Required*"
            app:endIconMode="clear_text"
            app:helperTextTextColor="#FF0000"

            app:counterTextColor="@color/black"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">


            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/Xemailaddress"
                android:textColor="#1A2163"
                >

            </com.google.android.material.textfield.TextInputEditText>
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="FULL NAME"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#1A2163"/>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:id="@+id/XXname"
            app:hintTextColor="@color/black"
            android:hint="enter full name"
            app:helperTextEnabled="true"
            app:helperText="Required*"
            app:helperTextTextColor="#FF0000"

            app:counterTextColor="@color/black"
            app:endIconMode="clear_text"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">


            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/Xname"
                android:textColor="#1A2163">

            </com.google.android.material.textfield.TextInputEditText>
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="COMPLETE ADDRESS"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="#1A2163"/>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:id="@+id/XXadress"
            app:hintTextColor="@color/black"
            android:hint="enter address"
            app:helperTextEnabled="true"
            app:helperText="Required*"
            app:helperTextTextColor="#FF0000"

            app:counterTextColor="@color/black"
            app:endIconMode="clear_text"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">


            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/Xaddress"
                android:textColor="#1A2163">

            </com.google.android.material.textfield.TextInputEditText>
        </com.google.android.material.textfield.TextInputLayout>


        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gender"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="#1A2163"/>

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/male"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="Male"
                android:textColor="@color/black" />

            <RadioButton
                android:id="@+id/female"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Female"
                android:layout_marginBottom="30dp"
                android:textColor="@color/black"/>
        </RadioGroup>

        <TextView
            android:id="@+id/textviewcivilstatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CIVIL STATUS"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="#1A2163"/>


        <Spinner
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:id="@+id/status"/>

        <TextView
            android:id="@+id/textView09"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="MEMBERSHIP NO."
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="#1A2163"/>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:id="@+id/XXmembership"
            app:hintTextColor="@color/black"
            android:hint="enter membership number"
            app:helperTextEnabled="true"
            app:helperText="Required*"
            app:helperTextTextColor="#FF0000"
            app:counterEnabled="true"
            app:counterMaxLength="7"
            app:counterTextColor="@color/black"
            app:endIconMode="clear_text"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">


            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/Xmembership"
                android:maxLength="7"
                android:inputType="number"
                android:textColor="#1A2163">

            </com.google.android.material.textfield.TextInputEditText>
        </com.google.android.material.textfield.TextInputLayout>



        <TextView
            android:id="@+id/textView12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="AGE"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#1A2163"/>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:id="@+id/XXage"
            app:hintTextColor="@color/black"
            android:hint="enter age"
            app:helperTextEnabled="true"
            app:helperText="Required*"
            app:helperTextTextColor="#FF0000"
            app:counterTextColor="@color/black"
            app:endIconMode="clear_text"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">


            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/Xage"
                android:inputType="numberDecimal"
                android:maxLength="2"
                android:textColor="#1A2163">

            </com.google.android.material.textfield.TextInputEditText>
        </com.google.android.material.textfield.TextInputLayout>



        <TextView
            android:id="@+id/textView11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DATE OF BIRTH"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="#1A2163"
            />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:id="@+id/XXdateofbirth"
            app:hintTextColor="@color/black"
            android:hint="enter date of birth"
            app:helperTextEnabled="true"
            app:helperText="Required*"
            app:helperTextTextColor="#FF0000"
            app:counterEnabled="true"
            app:counterMaxLength="20"
            app:counterTextColor="@color/black"
            app:endIconMode="clear_text"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">


            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/Xdateofbirth"
                android:inputType="date">

            </com.google.android.material.textfield.TextInputEditText>
        </com.google.android.material.textfield.TextInputLayout>






        <TextView
            android:id="@+id/textView26"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ELECTIVE POSITION FOR 2023:"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#1A2163"/>


       <Spinner
           android:layout_width="match_parent"
           android:layout_height="60dp"

           android:id="@+id/Xposition"/>


        <TextView
            android:id="@+id/textView2524356"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="What are your plans/visions for OCCC in the next 1-2 years?"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#1A2163"
            android:layout_marginTop="30dp" />



        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:id="@+id/XXvision"
            app:hintTextColor="@color/black"
            android:hint="plans/visions"
            app:helperTextEnabled="true"
            app:helperText="Required*"
            app:helperTextTextColor="#FF0000"
            app:counterEnabled="true"
            app:counterMaxLength="20"
            app:counterTextColor="@color/black"
            app:endIconMode="clear_text"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">


            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/Xvision"
                android:textColor="#1A2163">

            </com.google.android.material.textfield.TextInputEditText>
        </com.google.android.material.textfield.TextInputLayout>




        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1. I am eligible for the position I seek to be elected to, having complied with the following requirements and qualifications as indicated in the Cooperative Bylaws:">
            
        </TextView>





        <Button
            android:id="@+id/submitform"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Submit Form"
            android:textColor="#1A2163"
            android:backgroundTint="#00FFFF"
            android:textSize="20dp"/>





    </LinearLayout>



    </ScrollView>